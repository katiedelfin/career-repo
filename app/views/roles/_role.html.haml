.well.clearfix
  %h3= role.title

  %h4 Responsibilities
  %ul= render partial: :responsibility, collection: role.filtered_responsibilities(@tags)

  %h4 Accomplisments
  %ul= render partial: :accomplishment, collection: role.filtered_accomplishments(@tags)

  %h4 Projects
  %ul= render partial: :project, collection: role.filtered_projects(@tags)

  .btn-group.pull-right
    = link_to "", edit_role_path(role), class: "btn btn-default glyphicon glyphicon-pencil"
    = link_to "", role_path(role), method: :delete, class: "btn btn-danger glyphicon glyphicon-trash"
